@using PagedList.Mvc;
@using PagedList;
@model PagedList.PagedList<ĐA1_Chia_se_anh.Models.Anh>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/LayOut/AdminLayout.cshtml";
}
<p>
    @Html.ActionLink("Thêm mới ảnh", "ThemMoi")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().MaA)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().MaNS)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().MaCD)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().MaAB)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().NgayCapNhat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().MoTa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().HinhAnh)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaA)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaNS)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaCD)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaAB)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NgayCapNhat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MoTa)
        </td>
        <td>
            <div id="AnhBia"><img src="@Url.Content("~/HinhAnhDĐ/AnhCĐ/" + item.HinhAnh)" width="50" height="50"/></div>
        </td>
        <td>
            @Html.ActionLink("Chỉnh sửa", "Chinhsua", new { @MaAnh = item.MaA}) |
            @Html.ActionLink("Hiển thị", "Details", new { /* id=item.PrimaryKey */ }) |
            @Html.ActionLink("Xóa", "Delete", new { /* id=item.PrimaryKey */ })
        </td>
    </tr>
}

</table>
Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
<div class="MenuTrang">
    @Html.PagedListPager(Model, page => Url.Action("Index", new {page = page}))
</div>
<style>
    .MenuTrang li{
        display: inline;
        text-align: center;
    }
</style>